#!/bin/sh
# Maven Wrapper script
# This is a simplified version - downloads Maven if not present

set -e

MAVEN_PROJECTBASEDIR="${MAVEN_BASEDIR:-$(cd "$(dirname "$0")" && pwd)}"
MAVEN_OPTS="${MAVEN_OPTS:--Xmx64m}"

# Use system Maven if available
if command -v mvn >/dev/null 2>&1; then
    exec mvn "$@"
fi

# Download Maven if needed
MAVEN_HOME="$HOME/.m2/wrapper/dists/apache-maven-3.9.6"
MAVEN_URL="https://repo.maven.apache.org/maven2/org/apache/maven/apache-maven/3.9.6/apache-maven-3.9.6-bin.tar.gz"

if [ ! -d "$MAVEN_HOME" ]; then
    echo "Downloading Maven..."
    mkdir -p "$MAVEN_HOME"
    if command -v wget >/dev/null 2>&1; then
        wget -q -O - "$MAVEN_URL" | tar xz -C "$MAVEN_HOME" --strip-components=1
    elif command -v curl >/dev/null 2>&1; then
        curl -sL "$MAVEN_URL" | tar xz -C "$MAVEN_HOME" --strip-components=1
    else
        echo "Error: wget or curl required"
        exit 1
    fi
fi

exec "$MAVEN_HOME/bin/mvn" "$@"

